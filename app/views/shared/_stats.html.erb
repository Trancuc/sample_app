<% @user ||= current_user %>
<div class="stats">
  <%= link_to followings_path(id: @user.id) do %>
    <strong id="following" class="stat">
      <%= @user.following.size %>
    </strong>
    <%= t "global.following" %>
  <% end %>
  <%= link_to followers_path(id: @user.id) do %>
    <strong id="followers" class="stat">
      <%= @user.followers.size %>
    </strong>
     <%= t "global.follower" %>
  <% end %>
</div>
